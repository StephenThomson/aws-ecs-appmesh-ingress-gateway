{
    "variables": {
        "image_version": ""
    },
    "builders": [{
        "type": "docker",
        "image": "nginx:1.17.1-alpine",
        "commit": true,
        "run_command": ["-d", "-i", "-t", "--entrypoint=/bin/sh", "--", "{{.Image}}"],
        "changes": [
            "ENV HOSTNAME appmesh-ingress-gateway",
            "EXPOSE 8443",
            "CMD [\"/usr/local/bin/nginx_bootstrap.sh\"]"
        ]
    }],
    "provisioners": [{
            "type": "file",
            "source": "files/app_nginx.conf",
            "destination": "/etc/nginx/conf.d/"
        },
        {
            "type": "file",
            "source": "files/nginx_bootstrap.sh",
            "destination": "/usr/local/bin/"
        },
        {
            "type": "shell",
            "inline": [
                "chmod 0755 /usr/local/bin/nginx_bootstrap.sh",
                "chmod 0644 /etc/nginx/conf.d/app_nginx.conf"
            ]
        }
    ],
    "post-processors": [
        [{
                "type": "docker-tag",
                "repository": "artefacts.tax.service.gov.uk/aws-ecs-appmesh-ingress-gateway",
                "tag": "latest"
            },
            {
                "type": "docker-tag",
                "repository": "artefacts.tax.service.gov.uk/aws-ecs-appmesh-ingress-gateway",
                "tag": "{{user `image_version`}}"
            }
        ]
    ]
}